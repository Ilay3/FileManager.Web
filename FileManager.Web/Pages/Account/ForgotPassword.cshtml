@page "/Account/ForgotPassword"
@model FileManager.Web.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Забыли пароль?";
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="login-card">
        <h2>Забыли пароль?</h2>
        <p>Введите ваш email для получения ссылки сброса пароля</p>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-info">
                @Model.Message
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-error">
                @Model.ErrorMessage
            </div>
        }

        <form method="post">
            <div class="form-group">
                <label asp-for="ResetRequest.Email">Email:</label>
                <input asp-for="ResetRequest.Email" class="form-input" />
                <span asp-validation-for="ResetRequest.Email" class="text-error"></span>
            </div>

            <button type="submit" class="btn btn-primary">Отправить ссылку</button>
        </form>

        <div class="login-info">
            <small><a href="/Account/Login">Вернуться к входу</a></small>
        </div>
    </div>
</div>