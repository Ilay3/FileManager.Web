@page "/Account/ResetPassword"
@model FileManager.Web.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Сброс пароля";
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="login-card">
        <h2>Сброс пароля</h2>
        <p>Введите новый пароль для вашего аккаунта</p>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-success">
                @Model.Message
                <br><a href="/Account/Login">Войти в систему</a>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-error">
                @Model.ErrorMessage
            </div>
        }

        @if (string.IsNullOrEmpty(Model.Message))
        {
            <form method="post">
                <input type="hidden" asp-for="ResetData.Token" />
                <input type="hidden" asp-for="ResetData.Email" />

                <div class="form-group">
                    <label asp-for="ResetData.NewPassword">Новый пароль:</label>
                    <input asp-for="ResetData.NewPassword" type="password" class="form-input" />
                    <span asp-validation-for="ResetData.NewPassword" class="text-error"></span>
                    <small class="form-help">
                        Пароль должен содержать минимум 8 символов, включая заглавную букву, цифру и специальный символ
                    </small>
                </div>

                <div class="form-group">
                    <label asp-for="ResetData.ConfirmPassword">Подтвердите пароль:</label>
                    <input asp-for="ResetData.ConfirmPassword" type="password" class="form-input" />
                    <span asp-validation-for="ResetData.ConfirmPassword" class="text-error"></span>
                </div>

                <button type="submit" class="btn btn-primary">Сбросить пароль</button>
            </form>
        }

        <div class="login-info">
            <small><a href="/Account/Login">Вернуться к входу</a></small>
        </div>
    </div>
</div>