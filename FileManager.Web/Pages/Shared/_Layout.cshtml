<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FileManager</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
</head>
<body>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <header class="header">
            <div class="container">
                <div class="header-content">
                    <h1 class="logo">
                        <a href="/Files" style="text-decoration: none; color: inherit;">FileManager</a>
                    </h1>
                    <nav class="nav">
                        <a href="/Files" class="nav-link"><i class="bi bi-folder"></i> Мои документы</a>
                        @if (User.FindFirst("IsAdmin")?.Value == "True")
                        {
                            <a href="/Admin" class="nav-link"><i class="bi bi-gear"></i> Администрирование</a>
                        }
                        <a href="/Docs" class="nav-link"><i class="bi bi-book"></i> Документация</a>
                    </nav>
                    <div class="user-menu">
                        <span><i class="bi bi-person"></i> @User.Identity.Name</span>
                        <span style="color: #999; font-size: 14px;">(@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value)</span>
                        <button id="themeToggle" class="btn btn-secondary" type="button"><i class="bi bi-moon"></i></button>
                        <a href="/Account/Logout" class="btn btn-secondary">Выход</a>
                    </div>
                </div>
            </div>
        </header>
    }

    <main class="main">
        <div class="container">
            @RenderBody()
        </div>
    </main>
    <script src="~/js/files-manager.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>