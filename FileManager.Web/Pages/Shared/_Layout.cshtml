<!DOCTYPE html>
@using FileManager.Infrastructure.Configuration
@inject Microsoft.Extensions.Options.IOptions<ThemeOptions> ThemeOptions
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FileManager</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
</head>
@{ var theme = ThemeOptions.Value; }
<body style="--accent-color: @theme.AccentColor;">
    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="app-shell">
            <nav id="sidebar" class="sidebar">
                <div class="sidebar-logo">
                    @if (!string.IsNullOrEmpty(theme.LogoUrl))
                    {
                        <img src="@theme.LogoUrl" alt="Logo" />
                    }
                    else
                    {
                        <span>FileManager</span>
                    }
                </div>
                <a href="/Files" class="sidebar-link"><i class="bi bi-folder"></i> <span class="link-text">Мои документы</span></a>
                <a href="/Favorites" class="sidebar-link"><i class="bi bi-star"></i> <span class="link-text">Избранное</span></a>
                <a href="/Trash" class="sidebar-link"><i class="bi bi-trash"></i> <span class="link-text">Корзина</span></a>
                @if (User.FindFirst("IsAdmin")?.Value == "True")
                {
                    <a href="/Admin" class="sidebar-link"><i class="bi bi-gear"></i> <span class="link-text">Администрирование</span></a>
                    <a href="/Admin/Settings" class="sidebar-link"><i class="bi bi-sliders"></i> <span class="link-text">Настройки</span></a>
                }
                <a href="/Docs" class="sidebar-link"><i class="bi bi-book"></i> <span class="link-text">Документация</span></a>
            </nav>
            <div class="content">
                <header class="app-header">
                    <div class="logo">
                        @if (!string.IsNullOrEmpty(theme.LogoUrl))
                        {
                            <img src="@theme.LogoUrl" alt="Logo" />
                        }
                        else
                        {
                            <span>FileManager</span>
                        }
                    </div>
                    <div class="header-actions">
                        <a href="/Account/Profile" class="icon-button"><i class="bi bi-person"></i></a>
                        <a href="/Account/Logout" class="icon-button"><i class="bi bi-box-arrow-right"></i></a>
                    </div>
                </header>
                <main class="content-main">
                    <div class="container" id="pageContainer">
                        @RenderBody()
                    </div>
                </main>
            </div>
        </div>
    }
    else
    {
        <main class="content-main">
            <div class="container" id="pageContainer">
                @RenderBody()
            </div>
        </main>
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/notifications.js" asp-append-version="true"></script>
    <script src="~/js/files-manager.js" asp-append-version="true"></script>
    <script src="~/js/context-menu.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <div id="notificationContainer" class="notification-container"></div>
</body>
</html>
