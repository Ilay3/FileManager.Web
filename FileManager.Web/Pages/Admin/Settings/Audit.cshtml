@page "/Admin/Settings/Audit"
@model FileManager.Web.Pages.Admin.Settings.AuditModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@{
    ViewData["Title"] = "Настройки аудита";

    if (User.FindFirst("IsAdmin")?.Value != "True")
    {
        Response.Redirect("/Files");
        return;
    }
}

<h2>Настройки аудита</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="settings-info-card">
    <div class="settings-info-icon">
        <i class="bi bi-list-check"></i>
    </div>
    <div class="settings-info-content">
        <p>Настройки аудита определяют, какие действия пользователей будут записываться в журнал событий и как долго эти записи будут храниться.</p>
    </div>
</div>

<form method="post">
    <div class="settings-section">
        <h3 class="settings-section-title">Журналирование действий</h3>

        <div class="settings-form-check">
            <input asp-for="EnableFileActions" class="form-check-input" type="checkbox" id="enableFileActions" />
            <label asp-for="EnableFileActions" class="form-check-label" for="enableFileActions">
                Логировать действия с файлами
            </label>
        </div>
        <small class="settings-help-text mb-3 d-block">Запись в журнал операций создания, изменения и удаления файлов</small>

        <div class="settings-form-check">
            <input asp-for="EnableUserActions" class="form-check-input" type="checkbox" id="enableUserActions" />
            <label asp-for="EnableUserActions" class="form-check-label" for="enableUserActions">
                Логировать действия пользователей
            </label>
        </div>
        <small class="settings-help-text mb-3 d-block">Запись в журнал входов, выходов и изменений настроек пользователями</small>

        <div class="settings-form-check">
            <input asp-for="EnableAccessLog" class="form-check-input" type="checkbox" id="enableAccessLog" />
            <label asp-for="EnableAccessLog" class="form-check-label" for="enableAccessLog">
                Логировать управление доступом
            </label>
        </div>
        <small class="settings-help-text mb-3 d-block">Запись в журнал изменений прав доступа к файлам и папкам</small>
    </div>

    <div class="settings-section">
        <h3 class="settings-section-title">Настройки логирования</h3>

        <div class="settings-form-row">
            <div class="settings-form-group">
                <label asp-for="LogLevel" class="form-label">Уровень логирования</label>
                <select asp-for="LogLevel" class="form-select">
                    @foreach (var level in Model.LogLevels)
                    {
                        <option value="@level">@TranslateLevel(level)</option>
                    }
                </select>
                <small class="settings-help-text">
                    <strong>Информация</strong> - записывать только информационные сообщения и выше<br>
                    <strong>Предупреждение</strong> - записывать только предупреждения и ошибки<br>
                    <strong>Ошибка</strong> - записывать только ошибки<br>
                    <strong>Отладка</strong> - записывать все сообщения, включая отладочную информацию
                </small>
            </div>

            <div class="settings-form-group">
                <label asp-for="RetentionDays" class="form-label">Срок хранения (дней)</label>
                <input asp-for="RetentionDays" class="form-control" type="number" min="1" max="3650" />
                <span asp-validation-for="RetentionDays" class="text-danger"></span>
                <small class="settings-help-text">Количество дней, в течение которых будут храниться журналы аудита</small>
            </div>
        </div>
    </div>

    <div class="settings-form-actions">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>

@functions {
    private string TranslateLevel(string level) => level switch
    {
        "Trace" => "Трассировка",
        "Debug" => "Отладка",
        "Information" => "Информация",
        "Warning" => "Предупреждение",
        "Error" => "Ошибка",
        "Critical" => "Критический",
        "None" => "Нет",
        _ => level
    };
}

@section Scripts {
    <script src="~/js/settings.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/settings.css" />
}