@page "/Admin"
@model FileManager.Web.Pages.Admin.IndexModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@{
    ViewData["Title"] = "Администрирование";

    // Проверяем, что пользователь админ
    if (User.FindFirst("IsAdmin")?.Value != "True")
    {
        Response.Redirect("/Files");
        return;
    }
}

<div class="admin-container">
    <div class="admin-header mb-4">
        <h1 class="display-5 mb-2">Панель администрирования</h1>
        <p class="text-muted">Управление и настройка системы хранения файлов</p>
    </div>

    <div class="row g-4">
        <!-- Статистика -->
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <div class="row g-0">
                        <div class="col-md-3 col-sm-6 p-4 stats-card" style="border-right: 1px solid #f0f0f0;">
                            <div class="stats-icon bg-primary-subtle rounded-circle mb-3">
                                <i class="bi bi-people"></i>
                            </div>
                            <h3 class="stats-number">@Model.UsersCount</h3>
                            <p class="text-muted mb-0">Пользователи</p>
                        </div>

                        <div class="col-md-3 col-sm-6 p-4 stats-card" style="border-right: 1px solid #f0f0f0;">
                            <div class="stats-icon bg-success-subtle rounded-circle mb-3">
                                <i class="bi bi-file-earmark"></i>
                            </div>
                            <h3 class="stats-number">@Model.FilesCount</h3>
                            <p class="text-muted mb-0">Файлы</p>
                        </div>

                        <div class="col-md-3 col-sm-6 p-4 stats-card" style="border-right: 1px solid #f0f0f0;">
                            <div class="stats-icon bg-warning-subtle rounded-circle mb-3">
                                <i class="bi bi-folder"></i>
                            </div>
                            <h3 class="stats-number">@Model.FoldersCount</h3>
                            <p class="text-muted mb-0">Папки</p>
                        </div>

                        <div class="col-md-3 col-sm-6 p-4 stats-card">
                            <div class="stats-icon bg-info-subtle rounded-circle mb-3">
                                <i class="bi bi-hdd"></i>
                            </div>
                            <h3 class="stats-number">@FormatFileSize(Model.TotalSize)</h3>
                            <p class="text-muted mb-0">Общий размер</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Управление пользователями -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="card-icon bg-primary-subtle rounded-circle me-3">
                            <i class="bi bi-people"></i>
                        </div>
                        <h5 class="card-title mb-0">Пользователи</h5>
                    </div>
                    <p class="card-text text-muted">Управление пользователями, создание новых учетных записей и назначение прав администратора.</p>
                </div>
                <div class="card-footer bg-transparent border-0 pb-4 pt-0">
                    <a href="/Admin/Users" class="btn btn-primary w-100">
                        <i class="bi bi-person-gear me-2"></i> Управление пользователями
                    </a>
                </div>
            </div>
        </div>

        <!-- Управление группами -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="card-icon bg-success-subtle rounded-circle me-3">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <h5 class="card-title mb-0">Группы</h5>
                    </div>
                    <p class="card-text text-muted">Создание и управление группами пользователей для упрощения доступа к файлам и папкам.</p>
                </div>
                <div class="card-footer bg-transparent border-0 pb-4 pt-0">
                    <a href="/Admin/Groups" class="btn btn-success w-100">
                        <i class="bi bi-diagram-3 me-2"></i> Управление группами
                    </a>
                </div>
            </div>
        </div>

        <!-- Журналы -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="card-icon bg-warning-subtle rounded-circle me-3">
                            <i class="bi bi-journal-text"></i>
                        </div>
                        <h5 class="card-title mb-0">Журналы</h5>
                    </div>
                    <p class="card-text text-muted">Просмотр журналов действий пользователей, изменений файлов и системных событий.</p>
                </div>
                <div class="card-footer bg-transparent border-0 pb-4 pt-0">
                    <a href="/Admin/Logs" class="btn btn-warning w-100">
                        <i class="bi bi-list-check me-2"></i> Просмотр журналов
                    </a>
                </div>
            </div>
        </div>

        <!-- Настройки системы -->
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="card-icon bg-info-subtle rounded-circle me-3">
                            <i class="bi bi-gear"></i>
                        </div>
                        <h5 class="card-title mb-0">Настройки системы</h5>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-4 col-sm-6">
                            <a href="/Admin/Settings/Storage" class="settings-card">
                                <div class="d-flex align-items-center">
                                    <div class="settings-icon me-3">
                                        <i class="bi bi-hdd-rack"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Хранилище</h6>
                                        <small class="text-muted">Пути, квоты, размеры</small>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4 col-sm-6">
                            <a href="/Admin/Settings/Security" class="settings-card">
                                <div class="d-flex align-items-center">
                                    <div class="settings-icon me-3">
                                        <i class="bi bi-shield-lock"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Безопасность</h6>
                                        <small class="text-muted">Пароли, аутентификация</small>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4 col-sm-6">
                            <a href="/Admin/Settings/Email" class="settings-card">
                                <div class="d-flex align-items-center">
                                    <div class="settings-icon me-3">
                                        <i class="bi bi-envelope"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Электронная почта</h6>
                                        <small class="text-muted">SMTP, шаблоны писем</small>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4 col-sm-6">
                            <a href="/Admin/Settings/Audit" class="settings-card">
                                <div class="d-flex align-items-center">
                                    <div class="settings-icon me-3">
                                        <i class="bi bi-file-earmark-text"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Аудит</h6>
                                        <small class="text-muted">Журналирование действий</small>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4 col-sm-6">
                            <a href="/Admin/Settings/Uploads" class="settings-card">
                                <div class="d-flex align-items-center">
                                    <div class="settings-icon me-3">
                                        <i class="bi bi-cloud-arrow-up"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Загрузки</h6>
                                        <small class="text-muted">Квоты, ограничения</small>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4 col-sm-6">
                            <a href="/Admin/Settings/Versioning" class="settings-card">
                                <div class="d-flex align-items-center">
                                    <div class="settings-icon me-3">
                                        <i class="bi bi-clock-history"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Версионирование</h6>
                                        <small class="text-muted">История версий</small>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4 col-sm-6">
                            <a href="/Admin/Settings/Cleanup" class="settings-card">
                                <div class="d-flex align-items-center">
                                    <div class="settings-icon me-3">
                                        <i class="bi bi-trash"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Очистка</h6>
                                        <small class="text-muted">Автоудаление, архивы</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .admin-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .card {
        border-radius: 10px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    .card-icon {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        border-radius: 50%;
    }

    .stats-icon {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
    }

    .stats-number {
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .settings-card {
        padding: 15px;
        border-radius: 10px;
        border: 1px solid #f0f0f0;
        text-decoration: none;
        color: inherit;
        display: block;
        transition: all 0.2s;
    }

        .settings-card:hover {
            background-color: #f8f9fa;
            border-color: #dee2e6;
            color: inherit;
        }

    .settings-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        border-radius: 8px;
        background-color: #f8f9fa;
    }

    @@media (max-width: 768px) {
        .stats-card

    {
        border-right: none !important;
        border-bottom: 1px solid #f0f0f0;
    }

    }
</style>

@functions {
    private string FormatFileSize(long bytes)
    {
        if (bytes < 1024) return $"{bytes} Б";
        if (bytes < 1024 * 1024) return $"{bytes / 1024:F1} КБ";
        if (bytes < 1024 * 1024 * 1024) return $"{bytes / (1024 * 1024):F1} МБ";
        return $"{bytes / (1024 * 1024 * 1024):F1} ГБ";
    }
}